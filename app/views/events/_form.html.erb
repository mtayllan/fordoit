<%= form_with(model: event, id: 'event_form') do |f| %>
  <div class="flex">
    <%= render(TextInputComponent.new(name: :title, form: f, placeholder: "Add Event")) %>
    <%= f.datetime_field :datetime, class: "w-full shadow border rounded mr-2 p-2" %>
    <%= render(AddButtonComponent.new) %>
  </div>
<% end %>
