<div class="w-full">
  <%= task.title %>
  -
  <%= task.status %>
</div>
<div>
  <%= button_to 'Completed', task_path(task, status: :completed), method: :patch, class: "p-1 text-blue-500 bg-transparent border-2 border-blue-500 rounded hover:text-white hover:bg-blue-500 cursor-pointer" %>
</div>
<div>
  <%= button_to 'Cancelled', task_path(task, status: :cancelled), method: :patch, class: "p-1 text-red-500 bg-transparent border-2 border-red-500 rounded hover:text-white hover:bg-red-500 cursor-pointer" %>
</div>
