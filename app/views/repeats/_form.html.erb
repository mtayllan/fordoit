<%= form_with(model: repeat, id: 'repeat_form') do |f| %>
  <div class="flex">
    <%= render(TextInputComponent.new(name: :title, form: f, placeholder: "Add Repeat")) %>
    <%= f.submit "Add", class: "p-2 text-blue-500 bg-transparent border-2 border-blue-500 rounded hover:text-white hover:bg-blue-500 cursor-pointer" %>
  </div>
  <div class="flex justify-start justify-items-center gap-3 mt-1">
    <%= f.collection_check_boxes :days, {"Sun": 0, "Mon": 1, "Tue": 2, "Wed": 3, "Thu": 4, "Fri": 5, "Sat": 6}, :last, :first do |b| %>
      <div>
        <%= b.check_box %>
        <%= b.label %>
      </div>
    <% end %>
  </div>
<% end %>
