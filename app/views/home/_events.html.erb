<%= turbo_stream_from :events %>
<div class="container mx-auto flex flex-col content-center mt-5 lg:mt-10">
  <!-- header -->
  <%= render(SectionTitleComponent.new(title: "Events")) %>

  <!-- form -->
  <div class="mb-2">
    <%= render partial: 'events/form', locals: { event: event } %>
  </div>

  <!-- list -->
  <div>
    <%= turbo_frame_tag :events do %>
      <%= render events %>
    <% end %>
  </div>
</div>
