<div class="flex px-5">
  <div class="flex-1 mx-1">
    <%= render partial: 'tasks', locals: { task: @task, tasks: @tasks } %>
  </div>
  <div class="flex-1 text-center mx-1">
    <%= render partial: 'repeats', locals: { repeat: @repeat, repeats: @repeats } %>
  </div>
  <div class="flex-1 text-center mx-1">
    <%= render partial: 'events', locals: { event: @event, events: @events } %>
  </div>
  <div class="flex-2 text-center mx-1">
    <%= render partial: 'backlog', locals: { backlog_task: @backlog_task, backlog_tasks: @backlog_tasks } %>
  </div>
</div>
